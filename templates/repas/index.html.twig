{% extends 'base.html.twig' %}

{% block title %}Livré'Bon{% endblock %}

{% block body %}
<link rel="stylesheet" href="/style/register.css">
<div class="form_wrapper">
        <div class="form_container">
                <style>
                    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
                    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
                </style>

                <div class="example-wrapper">

                    {% for repas in repass %}
                    <div class="centre">
                            <tr>
                                <td>{{ repas.nom }}</td>
                                <br>
                                <td>{{ repas.type }}</td>
                                <br>
                                <td>{{ repas.tarif }}</td>€
                                <br>
                                <td>{{ repas.stock }}</td>
                                <br>
                            </tr>
                            <div class="divRetour">
                             <a href="{{ path('id-repas', {'id': repas.id}) }}" class="btn-retour">Voir le repas</a>
                            </div>

                            <div class="divRetour">
                                <a href="{{ path('edit_repas', {'id': repas.id}) }}" class="btn-retour">Modifier le repas</a>
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun Repas n'a était ajouter</td>
                            </tr>
                        {% endfor %}
                        <div class="divRetour">
                        <a href="{{ path('new-repas') }}" class="btn-retour">Ajouter un nouveau repas</a>
                        </div>
                    </div>

                </div>
        </div>
    </div>
{% endblock %}
