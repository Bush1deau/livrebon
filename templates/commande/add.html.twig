{% extends 'base.html.twig' %}

{% block title %}Livr√©'Bon{% endblock %}

{% block body %}
<link rel="stylesheet" href="/style/register.css">
<div class="form_wrapper">
        <div class="form_container">
            <center> 
                <h1>Passer une commande</h1>
            </center>

            {{ form_start(form) }}

                <div class="centre">
                    <div class="input_field"> 
                        {{ form_label(form.repas) }}
                        <br>
                        {{ form_widget(form.repas) }}
                    </div>

                    <div class="input_field"> 
                        {{ form_label(form.quantite) }}
                        <br>
                        {{ form_widget(form.quantite)}}
                    </div>

                    <div class="input_field"> 
                        {{ form_row(form.dateTime) }}
                    </div>
                

                 <div class="input_field"> 
                    {{ form_row(form.lieu) }}
                </div>

                 <div class="input_field"> 
                    {{ form_row(form.ville) }}
                 </div>

                </div>

                <div class="group-btn">
                    <button type="submit" class="btn">Commander</button>
                </div>
            {{ form_end(form) }}
        </div>
</div>



{% endblock %}
